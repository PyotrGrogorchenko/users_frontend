{
  "compilerOptions": {
    "target": "ES5",
    "lib": [
      "DOM",
      "ESNext"
    ],
    "typeRoots": [
      "typings/**/*.d.ts",
      "node_modules/@types"
    ],
    "baseUrl": "./",
    "jsx": "react-jsx",
    "module": "CommonJS",
    "noEmit": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "paths": {
      "@src/*": ["src/*"]
    }    
  }
}
